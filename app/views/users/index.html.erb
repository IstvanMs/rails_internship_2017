<div class="container">
  <div class="row">
    <div class="col-sm-7" style="background: #eff6f7; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm;">
    <center><h1> Users </h1></center>
      <table class="table table-condensed">
        <thead>  
          <tr>
            <th>Username</th>
            <th>Role</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.role %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4" style="background: #eff6f7; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 1cm 1cm 1cm;"><br>
        <%= render 'form' %>
    </div>
  </div>
</div>