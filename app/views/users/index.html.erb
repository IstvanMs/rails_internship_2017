<center><h1> Users </h1></center>


<div class="col-md-4" style="border: 1px solid black; border-radius: 5px;margin: 1cm 1cm 1cm 1cm;">
  <table class="table table-condensed">
    <thead>  
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user_path(user),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>