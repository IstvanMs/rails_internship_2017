<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm;">
  <div class="panel-heading">
    <center><h3> Users </h3>
    <% if current_page?(controller: 'dashboards', action: 'index') %>
      <%= link_to '(view all users)',{ :controller => 'users', :action => 'index'} %>
    <div class='row'>
      <%= button_to users_index_path, {:class => 'btn btn-md btn-success pull-right'} do%>
          <i class='glyphicon glyphicon-plus'>Add</i>
          <% end %>
    </div>
    <% end %>
    <% if current_page?(controller: 'users', action: 'index') %>
        <div class='row'>
          <div class='col-xs-2'>
            <%= form_tag :action => 'search' do%>
              <div class="input-group">
                <%= text_field_tag 'search', nil, placeholder: 'Search term...' %>
  
                <span class="input-group-btn">
                  <%= button_tag(type: "submit", class: "btn btn-default") do %>
                      <i class="glyphicon glyphicon-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %></center>
  </div>
  <div class='table-responsive' style=<% if current_page?(:controller => 'dashboards', :action => 'index') %>
      'height: 400px; margin-bottom: 15px; overflow-y: auto; '
    <% else %>
      'height: 500px; margin-bottom: 15px; overflow-y: auto;'
    <% end %>>
    <table class="table table-striped">
      <thead>  
        <tr bgcolor="#55b25d">
          <th class="text-center">Username</th>
          <th class="text-center">Role</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @label = '' %>
      <tbody style=<% if current_page?(:controller => 'dashboards', :action => 'index') %>
            'height: 362px;'
          <% else %>
            'height: 462px;'
          <% end %>>
        <% @label = '' %>
        <% @users.each do |user| %>
          <% if @label != user.role %>
            <tr>
              <th><%= user.role %></th>
              <% @label = user.role %>
            </tr>
          <% end %>
          <tr class=<% if user.role == 'Admin'%>'success'<% end %>
                    <% if user.role == 'Manager'%>'info'<% end %>
                    <% if user.role == 'Employee'%>'warning'<% end %>
                    <% if user.role == 'Client'%>'active'<% end %>>
            <td class="text-center"><%= user.username %></td>
            <td class="text-center"><%= user.role %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user_path(user),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  
</div>

