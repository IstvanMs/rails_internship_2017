<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
  <div class="panel-heading">
    <center><h3> Users </h3>
    <% if current_page?(controller: 'dashboards', action: 'index') %>
      <%= link_to '(view all users)',{ :controller => 'users', :action => 'index'} %>
    <div class='row'>
      <%= button_to users_index_path, {:class => 'btn btn-md btn-success pull-right', :style => 'margin-right: 10px;'} do%>
          <i class='glyphicon glyphicon-plus'>Add</i>
          <% end %>
    </div>
    <% end %>
    <% if current_page?(controller: 'users', action: 'index') %>
        <div class='row'>
          <div class='col-xs-2'>
            <%= form_tag :action => 'search' do%>
              <div class="input-group">
                <%= text_field_tag 'search', nil, placeholder: 'Search term...' %>
  
                <span class="input-group-btn">
                  <%= button_tag(type: "submit", class: "btn btn-sm btn-default") do %>
                      <i class="glyphicon glyphicon-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %></center>
  </div>
  
  <div class='container'>
    <div class='row' style="background-color: #55b25d;" align='center'>
      <div class='col-xs-3'>
        <center><h4>Username</h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4>Role</h4></center>
      </div>
      <div class='col-xs-3'>
        <center><h4>Email</h4></center>
      </div>
      <div class='col-xs-4'>
      </div>
    </div>
    <% @label = '' %>
    <% @users.each do |user| %>
    <% if @label != user.role %>
      <div class='row' style='background-color: #eaeaea;'><center><b><%= user.role %><b></div>
      <% @label = user.role %>
    <% end %>
      <div class='row' style='background-color: <% if user.role == 'Admin'%>#c9ffd2<% end %>
                    <% if user.role == 'Manager'%>#c9f0ff<% end %>
                    <% if user.role == 'Employee'%>#ffffc9<% end %>
                    <% if user.role == 'Client'%>#ffc9c9<% end %>; border-bottom: 1px solid #e0e0e0;'>
        <div class='col-xs-3'>
          <center><h5><%= user.username %></h5></center>
        </div>
        <div class='col-xs-2'>
          <center><h5><%= user.role %></h5></center>
        </div>
        <div class='col-xs-3'>
          <center><h5 style='word-wrap: break-word;'><%= user.email %></h5></center>
        </div>
        <div class='col-xs-4'>
          <h5><%= link_to 'Show', user_path(user) %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user_path(user),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

