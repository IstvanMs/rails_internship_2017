<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm;">
  <div class="panel-heading">
    <center><h3> Users </h3>
    <% if current_page?(controller: 'dashboards', action: 'index') %>
      <%= link_to '(view all users)',{ :controller => 'users', :action => 'index'} %>
    <div class='row'>
      <%= button_to users_index_path, {:class => 'btn btn-md btn-success pull-right'} do%>
          <i class="glyphicon glyphicon-plus">Add</i>
          <% end %>
    </div>
    <% end %></center>
  </div>
    <table class="table table-condensed">
      <thead>  
        <tr>
          <th>Username</th>
          <th>Role</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @label = '' %>
        <% @users.each do |user| %>
          <% if @label != user.role %>
          <thead class="thead-default">
            <tr>
              <th><%= user.role %></th>
              <% @label = user.role %>
            </tr>
          </thead>
          <% end %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user_path(user),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>