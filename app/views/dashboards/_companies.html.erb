<div class="panel panel-success"  style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8); border: 2px solid darkgreen; border-radius: 7px; margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
  <div class="panel-heading" style='border-bottom: 1px solid darkgreen; background-image: url(<%= asset_path 'table_head.jpg' %>); background-size: cover; background-repeat: no-repeat;'>
    <div class='row'>
      <center><h3><font color='white'> Companies </font></h3></center>
    </div>
    <div class='row'>
      <%= button_to new_company_path , :class => 'ourButton pull-right', :style => 'margin-right: 20px;' do%>
            <i class="glyphicon glyphicon-plus ourButton-addon">Create</i>
          <% end %>
    </div>
  </div>

  <div class='container'>
    <div class='row' style="background-color: #55b25d;" align='center'>
      <div class='col-xs-4'>
        <center><h4>Company</h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4>Status</h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
    </div>

    <% @companies.each do |company| %>

            <div class='row' style='background-color: #c9ffd2; border-bottom: 1px solid #e0e0e0;'>

              <div class='col-xs-4'>
                <center><h5><%= company.name %></h5></center>
              </div>


              <div class='col-xs-2'>
                <center><h5><% if Subscription.exists?(:company_id => company.id)%><%= Subscription.find_by(:company_id => company.id).status %><% else %>older version<% end %></h5></center>
              </div>

              <div class='col-xs-2'>
                <h5 align='right'><%= link_to 'Show', company_path(company) %></h5>
              </div>

              <div class='col-xs-2'>
                <center><h5><%= link_to 'Edit', edit_company_path(company) %></h5></center>
              </div>

              <div class='col-xs-2'>
                <h5 align='left'><%= link_to 'Destroy', company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></h5>
              </div>

            </div>
        <% end %>
  </div>
</div>