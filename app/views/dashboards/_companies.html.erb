<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
  <div class="panel-heading">
    <center><h3> Companies </h3></center>
  </div>

  <div class='container'>
    <div class='row' style="background-color: #55b25d;" align='center'>
      <div class='col-xs-6'>
        <center><h4>Company</h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
      <div class='col-xs-2'>
        <center><h4></h4></center>
      </div>
    </div>

    <% @companies.each do |company| %>

            <div class='row' style='background-color: #c9ffd2; border-bottom: 1px solid #e0e0e0;'>

              <div class='col-xs-6'>
                <center><h5><%= company.name %></h5></center>
              </div>

              <div class='col-xs-2'>
                <center><h5><%= link_to 'Show', company_path(company) %></h5></center>
              </div>

              <div class='col-xs-2'>
                <center><h5><%= link_to 'Edit', edit_company_path(company) %></h5></center>
              </div>

              <div class='col-xs-2'>
                <center><h5><%= link_to 'Destroy', company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></h5></center>
              </div>

            </div>
        <% end %>
  </div>
</div>

<%= link_to 'New company', new_company_path %>