<div class='container'>
	<div class='row'>
		<% if flash[:notice] %>   
		<div class="alert alert-warning">
		    <font color="red"><div class="notice"><%= flash[:notice] %></div></font>
		</div>
	<% end %>
	</div>
	<div class='row'>
			<div class='panel panel-success' style="background: white; border: 2px solid darkgreen; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8); border-radius: 7px; 5px;margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
				<div class='panel-heading' style='border-bottom: 1px solid darkgreen; background-image: url(<%= asset_path 'table_head.jpg' %>); background-size: cover; background-repeat: no-repeat;'>
					<div class='row' align='center'>
						<h3><font color='white'>Roles</h3>
					</div>
					<div class='row' align='left' style='margin-left: 20px;'>
						<h4>Company: <%= @company.name %> </h4>
					</div>
					<div class='row'>
				      <%= button_to new_role_path, :class => 'ourButton pull-right', :style => 'margin-right: 1cm;' do%>
				        <i class="glyphicon glyphicon-plus ourButton-addon">Create</i>
				      <% end %>
				    </div></font>
				</div>
				<div class='container'>
					<div class='row' style="background-color: #55b25d;" align='center'>
						<div class='col-xs-3'>
							<h4>Role name</h4>
						</div>
						<div class='col-xs-3'>
							<h4>Dashboard type</h4>
						</div>
						<div class='col-xs-2'>
							<h4>Permissions(PTNUR)</h4>
						</div>
						<div class='col-xs-2'>
							<h4>Extra Fields</h4>
						</div>
					</div>
					<% @roles.each do |role| %>
						<div class='row' align='center' style='border-bottom: 1px solid #e0e0e0; background-color: <% if role.dashboard == 'admin'%>#c9ffd2<% end %>
										                    <% if role.dashboard == 'manager'%>#c9f0ff<% end %>
										                    <% if role.dashboard == 'employee'%>#ffffc9<% end %>
										                    <% if role.dashboard == 'client'%>#ffc9c9<% end %>;'>
							<div class='col-xs-3'>
								<h5><%= role.role_name %></h5>
							</div>
							<div class='col-xs-3'>
								<h5><%= role.dashboard %></h5>
							</div>
							<div class='col-xs-2'>
								<h5><%= role.permissions %></h5>
							</div>
							<div class='col-xs-2'>
								<h5><%= link_to 'extra', :controller => 'role_fields', :action => 'index', :id => role.id %></h5>
							</div>
							<div class='col-xs-2'>
								<div class='row'>
									<div class='col-xs-6'><h5><%= link_to 'Edit', edit_role_path(role) %></h5></div>
									<div class='col-xs-6'><h5><%= link_to 'Destroy', role_path(role),
					                    method: :delete,
					                    data: { confirm: 'Are you sure?' } %></h5></div>
								</div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
	</div>
</div>