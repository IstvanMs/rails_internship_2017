<!DOCTYPE html>
<html>
  <head>
    <title>ArtSoft PM</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.3/jspdf.debug.js"></script>
  </head>

  <body style="background: #e8f2ef;">
  	<div class="jumbotron" style="background: #e8f2ef;">
  		<% if current_page?(:controller => 'sessions', :action => 'login') || current_page?(:controller => 'sessions', :action => 'forgot_password')%>
		  	<div class="row" style="background: #d5e2de;" >
		  		<%= link_to image_tag("logo.png", :class => "pull-left", :style => 'margin: 0px 0px 0px 5px;', :alt => "Logo"), :controller => 'dashboards', :action => 'index' %>
		  	</div>
	  	<% end %>

	  	<div class="row" >
	  		<% if @current_user != nil %>
	  			<%= render(:partial => 'layouts/header', :formats => [:html])  %>
	  		<% end %>
	  	</div>

	  	<div class="row">
	    	<%= yield %>
		</div>
	</div>
  </body>
</html>
