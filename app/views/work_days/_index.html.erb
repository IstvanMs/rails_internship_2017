<% if @current_user.role == "Employee" %>
<div class="panel panel-success" style="margin: 1cm 1cm 1cm 1cm;  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8); border: 2px solid darkgreen; border-radius: 7px; min-width: 300px;">
  <div class="panel-heading" style='border-bottom: 1px solid darkgreen; background-image: url(<%= asset_path 'table_head.jpg' %>); background-size: cover; background-repeat: no-repeat;'>
    <center><h3><font color='white'>Workday</font></h3></center>
  </div>

  <div class='container' style='width: 100%;'>
    <% if @work_day %>
        <div class='row' align='center'>
          <div class="col-xs-6">
            <h4>Start day:</h4>
            <%= link_to work_days_start_work_day_path(:work_day => @work_day),  method: :post, data: { confirm: 'Start new work day?' }, :class => 'btn btn-md btn-success', :disabled => @work_day.status == 'Started' do%>
                <i class="glyphicon glyphicon-play"></i>
            <% end %><br>
          </div>

          <div class="col-xs-6">
            <h4>End day:</h4>
            <%= link_to work_days_finish_work_day_path(:work_day => @work_day),  method: :post, data: { confirm: 'You are going to finish the current work day. This cannot be undone. Are you sure?' }, :class => 'btn btn-md btn-danger', :disabled => @work_day.status == 'Finished' || @work_day.status != 'Started' do %>
                <i class="glyphicon glyphicon-stop"></i>
            <% end %><br>
          </div>
        </div>
        <%= 'Started at: ' + @work_day.start_time.to_s %>
    <% else %>
        <center><h4>Cannot start new work day. Try again tomorrow.</h4></center>
    <% end %>
  </div>
</div>
<% end %>