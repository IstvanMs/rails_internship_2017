<div class='container' style='min-width: 500px;'>
  <div class='row'>
    <div class='panel panel-default'>
      <div class='panel-body' style='background-color: #f9f9f5;'>
          <%= form_tag :action => 'by_project' do%>
            <div class='row' style="white-space: nowrap">
              <div class='col-xs-12'>

                <p>Date: <input value="<%= @aux['day'] %>" type="text" id="datepicker" name="day" class='datepicker' >

                        <script type="text/javascript">
                          $(document).ready(function(){
                            $('.datepicker').datepicker();
                            });

                        </script></p>
              </div>
            </div>

            <div class='row'>
              <div class='col-xs-11'>
                <label>Project:&nbsp;</label>
                <%= select_tag "project", options_from_collection_for_select(@projects, "id", "title", @current_filter['project'].id) %>

              </div>
              <div class='col-xs-1'>
                <%= button_tag(type: "submit", class: "btn btn-success") do %>
                    <i class="glyphicon glyphicon-arrow-right"></i>
                <% end %>
              </div>

            </div>

          <% end %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='panel panel-success'>
      <div class="panel-heading">
        <center><h3>Reports</h3></center>
        <div class='row' style="white-space: nowrap">
          <center>
            <div class='col-xs-4'>
              <h4>Project: <%=@current_filter['project'].title %></h4>
            </div>
            <div class='row' style="white-space: nowrap">
              <h4>Date: <%=@aux['day'] %> </h4>
            </div>
          </center>
        </div>
      </div>

      <div class="container">
        <div class='row' align='center' style="background-color: #55b25d;">
          <div class='col-xs-5'>
            <div class='row'>
              <h4>Task Info</h4>
            </div>
            <div class='row'>
              <div class='col-xs-6'>
                <h5>Title</h5>
              </div>
              <div class='col-xs-6'>
                <h5>Requirement</h5>
              </div>
            </div>
          </div>
          <div class='col-xs-3'>
            <div class='row'>
              <h4>Worked Time</h4>
            </div>
            <div class='row'>
              <div class='col-xs-6'>
                <h5>Total</h5>
              </div>
              <div class='col-xs-6'>
                <h5>Day</h5>
              </div>
            </div>
          </div>
          <div class='col-xs-2'>
            <h4>Assigned user</h4>
          </div>
          <div class='col-xs-2'>
            <h4>Status</h4>
          </div>
        </div>
          <div class='row' style="border-bottom: 1px solid #e0e0e0; background-color: #f2f4f7" align='center'>
            <% if @data['tasks'].length == 0 %>
              <div class='col-xs-5'>
                <div class='row'>
                  <div class='col-xs-6'>
                    <h5>-</h5>
                  </div>
                  <div class='col-xs-6'>
                    <h5>-</h5>
                  </div>
                </div>
              </div>
              <div class='col-xs-3'>
                <div class='row'>
                  <div class='col-xs-6'>
                    <h5>-</h5>
                  </div>
                  <div class='col-xs-6'>
                    <h5>-</h5>
                  </div>
                </div>
              </div>
              <div class='col-xs-2'>
                <h5>-</h5>
              </div>
              <div class='col-xs-2'>
                <h5>-</h5>
              </div>
            <% else %>
              <% for j in 0..@data['tasks'].length - 1 %>
                <div class="row" style='border-bottom: 1px solid #e0e0e0;'>
                <div class='col-xs-5'>
                  <h5>
                    <% if j == 0 %>
                        <%= @data['day'] %>
                    <% end %>
                  </h5>
                  <div class='row'>
                    <div class='col-xs-6'>
                      <h5><%= @data['tasks'][j].title %></h5>
                    </div>
                    <div class='col-xs-6'>
                      <h5><%= @data['tasks'][j].requirement %></h5>
                    </div>
                  </div>
                </div>
                <div class='col-xs-3'>
                  <div class='row'>
                    <div class='col-xs-6'>
                      <h5>
                        <% time = number_with_precision( @data['task_infos'][@data['tasks'][j].id]['duration'], precision: 1)%>
                        <%= time.to_s + ' minute'.pluralize(time) %>
                      </h5>
                    </div>
                    <div class='col-xs-6'>
                      <h5>
                        <% time = number_with_precision( @data['task_infos'][@data['tasks'][j].id]['duration_day'], precision: 1)%>
                        <%= time.to_s + ' minute'.pluralize(time) %>
                      </h5>
                    </div>
                  </div>
                </div>
                <div class='col-xs-2'>
                  <h5>
                    <% if @data['task_infos'][@data['tasks'][j].id]['assigned']%>
                        <%= link_to @data['task_infos'][@data['tasks'][j].id]['assigned'].username, users_profile_path(:id => @data['task_infos'][@data['tasks'][j].id]['assigned'].id)%>
                    <% end %>
                  </h5>
                </div>
                <div class='col-xs-2'>
                  <h5><%= @data['tasks'][j].status %></h5>
                </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>