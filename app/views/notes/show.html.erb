<div class="container">
	<div class='row'>
		<div class="col-sm-4 ">
			<div class="panel panel-success" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8); border-radius: 7px; border: 2px solid darkgreen;margin: 1cm 1cm 1cm 1cm;">
				<div class="panel-heading" style='background-image: url(<%= asset_path 'add_panel.jpg' %>); background-size: cover; background-repeat: no-repeat; border-bottom: 1px solid darkblue;'>
					<h3><font color='white'> Note information</font> </h3>
				</div>
				<div class="panel-body" style='background-color: <% if @note.visibility.split('-')[0] == 'general'%>#eaf1f9<% end %>
                    <% if @note.visibility.split('-')[0] == 'task'%>#c9f0ff<% end %>
                    <% if @note.visibility.split('-')[0] == 'project'%>#ffffc9<% end %>
                    <% if @note.visibility.split('-')[0] == 'user'%>#ffc9c9<% end %>;'>
					<h4>
						<strong>Text:</strong>
  						<%= @note.text %>
					</h4>
					<% if @current_user.role == 'Manager' %>
					<h4>
						<strong>Visibility:</strong>
  						<%= @note.visibility %>
					</h4>
					<% end %>
				</div>
			</div>
		</div>
		
	</div>
	<div class='row' align='left' style='margin-top: 100px;'>
  		<%= link_to "<button class='backButton'><i class='glyphicon glyphicon-chevron-left backButton-addon'>Back</i></button>".html_safe, url_for(:back)%>
	</div>
</div>
