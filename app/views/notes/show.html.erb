<div class="jumbotron" style="background: #e8f2ef;">
	<div class='row'>
		<div class="col-sm-4 ">
			<div class="panel panel-success" style="margin: 1cm 1cm 1cm 1cm;">
				<div class="panel-heading">
					<h3> Note information </h3>
				</div>
				<div class="panel-body" style='background-color: <% if @note.visibility.split('-')[0] == 'general'%>#eaf1f9<% end %>
                    <% if @note.visibility.split('-')[0] == 'task'%>#c9f0ff<% end %>
                    <% if @note.visibility.split('-')[0] == 'project'%>#ffffc9<% end %>
                    <% if @note.visibility.split('-')[0] == 'user'%>#ffc9c9<% end %>;'>
					<h4>
						<strong>Text:</strong>
  						<%= @note.text %>
					</h4>
					<% if @current_user.role == 'Manager' %>
					<h4>
						<strong>Visibility:</strong>
  						<%= @note.visibility %>
					</h4>
					<% end %>
				</div>
			</div>
		</div>
		
		<span class="bottomleft">
			<%= link_to 'Back', url_for(:back), {:class => 'btn btn-md btn-primary glyphicon pull-left', :style => 'margin: 0px 0px 10px 0px;'}%>
		</span>
	</div>
</div>