<div class="container">
	<div class="row">
		<div class="col-md-4 ">
			<div class="panel panel-primary" style="margin: 1cm 1cm 1cm 1cm;">
				<div class="panel-heading">
					<p> Project information </p>
				</div>
				<div class="panel-body">
					<p>
					  <strong>Title:</strong>
					  <%= @project.title %>
					</p>
					 
					<p>
					  <strong>Text:</strong>
					  <%= @project.text %>
					</p>

					<%= link_to 'Edit', edit_project_path(@project) %>
				</div>
			</div>
		</div>
	</div>

	<h2>Tasks:</h2>
	<%= render @project.tasks %>
	 
	<h2>Add a task:</h2>
	<%= render 'tasks/form' %>

</div>
	 
	