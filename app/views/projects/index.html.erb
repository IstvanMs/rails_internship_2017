<div class="container">
  <div class="row">
    <div class="col-sm-7" style="background: #eff6f7; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm;">
    
      <center><h1> List of Projects </h1></center>

      <table class="table table-condensed"> 
        <thead>
          <tr>
          <th>Title</th>
          <th>Text</th>
          <th colspan="2"></th>
          </tr>
        </thead>
 
        <tbody>
          <% @projects.each do |project| %>
          <tr>
          <td><%= project.title %></td>
          <td><%= project.text %></td>
          <td><%= link_to 'Show', project_path(project) %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project_path(project),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table><br>
      
      <center><%= link_to 'New project', new_project_path %></center><br>
    </div>
  </div>
</div>