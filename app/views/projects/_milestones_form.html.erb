<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm;">
	<div class="panel-heading">
		<center><h2>Milestones</h1></center>
	</div>
	<div class='container'>
		<div class='row' style="background-color: #55b25d;" align='center'>
			<div class='col-xs-3'>
				<h4>Name</h4>
			</div>
			<div class='col-xs-3'>
				<h4>Due Date</h4>
			</div>
			<div class='col-xs-5'>
				<div class='row'>
					<div class='col-xs-12'>
						<h4>Tasks</h4>
					</div>
				</div>
				<div class='row'>
					<div class='col-xs-6'>
						<h5>Title</h5>
					</div>
					<div class='col-xs-6'>
						<h5>Status</h5>
					</div>
				</div>
			</div>
			<div class='col-xs-1'>
			</div>
		</div>
		<% if !@milestones || @milestones.length == 0%>
			<div class='row'>
				<center><h2>No milestones available</h2></center>
			</div>
		<% else %>
			<% i = 0 %>
			<% @milestones.each do |milestone| %>
				<div class='row' style="border-bottom: 1px solid #e0e0e0; background-color: <% if i % 2 == 0 %> #f2f4f7; <% else %> #f9fbff; <% end %>" align='center'>
				</div>
			<% end %>
		<% end %>
	</div>
</div>