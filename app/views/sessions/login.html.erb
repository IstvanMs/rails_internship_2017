<div id='outerDiv'>
	<div class='container' id='login_container'>
		<div class='row'>
			<div id='login_icon_holder'><i id='login_container_icon' class='glyphicon glyphicon-user'></i></div>
		</div><br>
		<%= form_tag(:action => 'login_attempt') do %>
			<div class='container' align='center'>
				<div class='row'>
					<div class="inner-addon left-addon">
						<i class="glyphicon glyphicon-user"></i>
						<%= text_field_tag :username, nil, placeholder: 'Username', :class => 'form-control', :style => 'font-size: 20px;' %>
					</div>
				</div><br>

				<div class='row'>
					<div class="inner-addon left-addon">
						<i class="glyphicon glyphicon-lock"></i>
						<%= password_field_tag :login_password , nil, placeholder: 'Password', :class => 'form-control', :style => 'font-size: 20px;' %>
					</div>
				</div>
			</div>
			<hr>
			<button type="submit" class="btn btn-lg btn-success btn-block">
		  		<i class="glyphicon glyphicon-share"></i> Sign in
			</button>
			<div class='row'>
				<div class='col-xs-6'>
					<h5 align='left'><%= link_to 'Company Sign Up', sessions_sign_up_path, :style => 'color: white;' %></h5>
				</div>
				<div class='col-xs-6'>
					<h5 align='right'><%= link_to 'Forgot password?', sessions_forgot_password_path, :style => 'color: white;' %></h5>
				</div>
			</div>
		<% end %>
	</div>
</div>

<% if flash[:notice] %>
	<script>
		alert('<%= flash[:notice] %>');
	</script>
<% end %>