<div class="container">
	<div class="col-md-3" style="float: none; margin: 0 auto;">
		<center><div class="panel panel-default" style="background: #edefee">
			<%= form_tag(:action => 'reset') do %>
				<div class="panel-body">
					<h2>Reset Password</h2><hr style="background-color: #709674; height: 1px; border: 0;">

					<div class="form-group">
						<%= label_tag "Enter your email" %><br>
						<span class="form-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
						<%= text_field_tag :email %>
					</div>

					<% if flash[:notice] %>
						<div class="alert alert-warning">
						    <font color="red"><div class="notice"><%= flash[:notice] %></div></font>
						</div>
					<% end %>

				</div>
	 			
	 			<div class="panel-footer clearfix " style="background: #c7d6cd;">
					<button type="submit" class="btn btn-lg btn-success btn-block">
					  <i class="glyphicon glyphicon-share"></i> Send
					</button>
				</div>
			<% end %>
		</div></center>
	</div>
</div>