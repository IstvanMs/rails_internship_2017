<div class='container'>
	<div class='boxShaderedCont'>
		<div class='row'>
			<h1 align='center'><font color='#d2f2d5' style='font-style: oblique;'>Sign up for $99 monthly</font></h1>
		</div>
		<div class='row' style='width: 100%; margin-left: 0; display: flex;'>
			<div class='container-45-left'>
				<div class='row'>
					<h3 align='center'><font color='#c4dba8'>Sign Up(for $99)</font></h3>
				</div>
				<div class='container'  style='margin-left: 10px;'>
					<%= form_tag(:action => 'create_company') do %>
						<div class='container' align='center'>
							<div class='row' align='center'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-briefcase"></i>
									<% if @values[:company_name] %>
										<%= text_field_tag :company_name, nil, placeholder: 'Company', :class => 'form-control', :style => 'font-size: 20px;', :value => @values[:company_name] %>
									<% else %>
										<%= text_field_tag :company_name, nil, placeholder: 'Company', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>

							<div class='row' align='center'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-user"></i>
									<% if @values[:username] %>
										<%= text_field_tag :username, nil, placeholder: 'Usename', :class => 'form-control', :style => 'font-size: 20px;', :values => @values[:username] %>
									<% else %>
										<%= text_field_tag :username, nil, placeholder: 'Usename', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>

							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-lock"></i>
									<%= password_field_tag :password , nil, placeholder: 'Password', :class => 'form-control', :style => 'font-size: 20px;' %>
								</div>
							</div><br>

							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-lock"></i>
									<%= password_field_tag :password2 , nil, placeholder: 'Confirm Password', :class => 'form-control', :style => 'font-size: 20px;' %>
								</div>
							</div><br>


							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-envelope"></i>
									<% if @values[:email] %>
										<%= text_field_tag :email , nil, placeholder: 'Email(aaaa@bbb.com)', :class => 'form-control', :style => 'font-size: 20px;', :values => @values[:email] %>
									<% else %>
										<%= text_field_tag :email , nil, placeholder: 'Email(aaaa@bbb.com)', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>
						</div>
						<hr>
						<% if @errors.present? %>
						    <div class="alert alert-warning" class="Signup_Errors">
						    <% @errors.each do |error| %>
						      <font color="red"><div class="notice"><li><%= error[0] + ' ' + error[1] %></li></div></font>
						    <% end %>
						    </div>
						<% end %>
						<button type="submit" class="btn btn-lg btn-success btn-block">
					  		<i class="glyphicon glyphicon-share"></i> Sign up
						</button>
					<% end %>
				</div>
			</div>
			<div class='midle-delimiter'>
			</div>
			<div class='container-45-right'>
				<div class='row'>
					<h3 align='center'><font color='#c4dba8'>Or 1 day testing</font></h3>
				</div>
				<div class='container'  style='margin-right: 30px;'>
					<%= form_tag(:action => 'trial') do %>
						<div class='container' align='center'>
							<div class='row' align='center'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-briefcase"></i>
									<% if @values_trial[:company_name] %>
										<%= text_field_tag :company_name, nil, placeholder: 'Company', :class => 'form-control', :style => 'font-size: 20px;', :value => @values_trial[:company_name] %>
									<% else %>
										<%= text_field_tag :company_name, nil, placeholder: 'Company', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>

							<div class='row' align='center'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-user"></i>
									<% if @values_trial[:username] %>
										<%= text_field_tag :username, nil, placeholder: 'Usename', :class => 'form-control', :style => 'font-size: 20px;', :values => @values_trial[:username] %>
									<% else %>
										<%= text_field_tag :username, nil, placeholder: 'Usename', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>

							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-lock"></i>
									<%= password_field_tag :password , nil, placeholder: 'Password', :class => 'form-control', :style => 'font-size: 20px;' %>
								</div>
							</div><br>

							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-lock"></i>
									<%= password_field_tag :password2 , nil, placeholder: 'Confirm Password', :class => 'form-control', :style => 'font-size: 20px;' %>
								</div>
							</div><br>


							<div class='row'>
								<div class="inner-addon left-addon">
									<i class="glyphicon glyphicon-envelope"></i>
									<% if @values_trial[:email] %>
										<%= text_field_tag :email , nil, placeholder: 'Email(aaaa@bbb.com)', :class => 'form-control', :style => 'font-size: 20px;', :values => @values_trial[:email] %>
									<% else %>
										<%= text_field_tag :email , nil, placeholder: 'Email(aaaa@bbb.com)', :class => 'form-control', :style => 'font-size: 20px;' %>
									<% end %>
								</div>
							</div><br>
						</div>
						<hr>
						<% if @errors_trial.present? %>
						    <div class="alert alert-warning" class="Signup_Errors">
						    <% @errors_trial.each do |error| %>
						      <font color="red"><div class="notice"><li><%= error[0] + ' ' + error[1] %></li></div></font>
						    <% end %>
						    </div>
						<% end %>
						<button type="submit" class="btn btn-lg btn-success btn-block">
					  		<i class="glyphicon glyphicon-share"></i> Trial
						</button>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class='row' align='left' style='margin-top: 100px;'>
		<%= link_to "<button class='backButton'><i class='glyphicon glyphicon-chevron-left backButton-addon'>Back</i></button>".html_safe, root_path%>
	</div>
</div>