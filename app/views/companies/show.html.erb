<div class='container'>
  <div class="panel panel-success"  style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.8); border: 2px solid darkgreen; border-radius: 7px; margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
    <div class="panel-heading" style='border-bottom: 1px solid darkgreen; background-image: url(<%= asset_path 'table_head.jpg' %>); background-size: cover; background-repeat: no-repeat;'>
      <div class='row'><font color='white'>
        <p style='margin-left: 15px;'>
          <strong>Name:</strong>
          <%= @company.name %>
        </p>
      </div>
      <div class='row'>
        <center><h3> Admins </h3></center>
      </div>
      <div class='row'>
        <%= link_to '(create new admin)',  new_user_path(:company => @company.id), :style => 'margin-left: 20px; color: white;'%>
      </div>
    </div>
  </font>
    <div class='container'>
      <div class='row' style="background-color: #55b25d;" align='center'>
        <div class='col-xs-6'>
          <center><h4>Username</h4></center>
        </div>
        <div class='col-xs-6'>
          <h1></h1>
        </div>
      </div>

          <% @admins = Company.get_admins(@company.id) %>
          <% @admins.each do |admin| %>
              <div class='row' style='background-color: #c9ffd2; border-bottom: 1px solid #e0e0e0;'>
                <div class='col-xs-6'>
                  <center><h5><%= admin.username %></h5></center>
                </div>
                <div class='col-xs-6'>
                  <h5><%= link_to 'Show', user_path(admin) %> | 
                    <%= link_to 'Edit', edit_user_path(admin) %> | 
                    <%= link_to 'Destroy', user_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></h5>
                </div>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
<div class='row' align='left' style='margin-top: 100px;'>
      <%= link_to "<button class='backButton'><i class='glyphicon glyphicon-chevron-left backButton-addon'>Back</i></button>".html_safe, url_for(:back)%>
  </div>
  </div>