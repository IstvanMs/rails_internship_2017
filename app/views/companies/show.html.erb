<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<div class="panel panel-success"  style="background: white; border: 2px solid lightgrey; border-radius: 5px;margin: 1cm 0cm 1cm 0cm; min-width: 400px;">
  <div class="panel-heading">
    <center><h3> Admins </h3></center>
  </div>

  <div class='container'>
    <div class='row' style="background-color: #55b25d;" align='center'>
      <div class='col-xs-6'>
        <center><h4>Username</h4></center>
      </div>
      <div class='col-xs-6'>
        <h1></h1>
      </div>

        <% @admins = Company.get_admins(@company.id) %>
        <% @admins.each do |admin| %>
            <div class='row' style='background-color: #c9ffd2; border-bottom: 1px solid #e0e0e0;'>
              <div class='col-xs-6'>
                <center><h5><%= admin.username %></h5></center>
              </div>
              <div class='col-xs-6'>
                <h5><%= link_to 'Show', user_path(admin) %>
                  <%= link_to 'Edit', edit_user_path(admin) %>
                  <%= link_to 'Destroy', user_path(admin), method: :delete, data: { confirm: 'Are you sure?' } %></h5>
              </div>
        <% end %>
            </div>
    </div>
  </div>
</div>

<div>
<%= render '/users/form' %>

<%= link_to 'Back', url_for(:back), {:class => 'btn btn-md btn-primary glyphicon pull-left'}%>
</div>