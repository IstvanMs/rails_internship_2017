<div class='container'>
  <div class='row'>  
    <div class='panel panel-success' style='width: 300px; float: none; margin: 0 auto;'>
    	<div class='panel-heading' align='center'>
    		<h2>Edit</h2>
    	</div>
    	<%= form_for @message do |f| %>
    		<div class='panel-body' align='center'>
                <h4>
                    <%= f.label :recipient_id %><br>
                    <%= f.select( :recipient_id, options_from_collection_for_select(@users, "id", "username") ) %>
                </h4>

    			<h4>
    				<%= f.label :subject %><br>
    				<%= f.text_field :subject %>
    			</h4>
    			
                <h4>
                    <%= f.label :content %><br>
                    <%= f.text_area :content, :style => 'resize: none; width: 250px; height: 100px;' %>
                </h4>
                <%= f.hidden_field :status, :value => 'sent' %>
                <%= f.hidden_field :sender_id, :value => @current_user.id %>
    		</div>
    		<div class="panel-footer clearfix ">
    			<button type="submit" class="btn btn-lg btn-primary btn-block">
    				<i class="glyphicon glyphicon-save"></i> Save
    			</button>
    		</div>
    	<% end %>
    <% if @message.errors.any? %>
        <div class="alert alert-warning" class="Signup_Errors">
        <% for message_error in @message.errors.full_messages %>
          <font color="red"><div class="notice"><li><%= message_error %></li></div></font>
        <% end %>
        </div>
    <% end %>
    </div>
  </div>

  <div class='row'>
    <%= link_to 'Back', url_for(:back), {:class => 'btn btn-md btn-primary glyphicon pull-left'}%>
  </div>
</div>